# Server
PORT=3001
NODE_ENV=development

# Database (PostgreSQL with PostGIS)
DATABASE_URL=postgresql://beacon:beacon@localhost:5432/beacon

# JWT
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=7d

# SMS Gateway (Twilio)
# Account SID from your Twilio console (https://console.twilio.com)
SMS_GATEWAY_SID=
# Auth Token from your Twilio console
SMS_GATEWAY_AUTH_TOKEN=
# Twilio phone number in E.164 format (e.g. +1234567890)
SMS_GATEWAY_PHONE_NUMBER=

# CORS
CORS_ORIGINS=http://localhost:5173

# Logging
LOG_LEVEL=debug
